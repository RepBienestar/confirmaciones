{
    "name": "plantilla-app",
    "version": "1.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration=production --output-hashing=all --source-map=false --optimization=true --aot --delete-output-path && node build-config.js && node post-build.js",
        "watch": "ng build --watch --configuration=development",
        "test": "ng test",
        "clean": "rm -rf dist node_modules/.cache .angular/cache",
        "clean:full": "rm -rf dist node_modules/.cache .angular/cache node_modules package-lock.json",
        "reset": "npm run clean:full && npm install --legacy-peer-deps && ng serve"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^18.2.13",
        "@angular/common": "^18.2.13",
        "@angular/compiler": "^18.2.0",
        "@angular/core": "^18.2.0",
        "@angular/forms": "^18.2.0",
        "@angular/platform-browser": "^18.2.0",
        "@angular/platform-browser-dynamic": "^18.2.0",
        "@angular/router": "^18.2.0",
        "@fortawesome/fontawesome-free": "^6.7.2",
        "flatpickr": "^4.6.13",
        "flowbite": "^2.5.2",
        "jquery": "^3.7.1",
        "ng-multiselect-dropdown": "^1.0.0",
        "ng2-pdf-viewer": "^10.4.0",
        "ngx-extended-pdf-viewer": "^24.1.0",
        "ngx-file-drop": "^16.0.0",
        "ngx-toastr": "^19.0.0",
        "quill": "^2.0.3",
        "rxjs": "~7.8.0",
        "sweetalert2": "^11.15.1",
        "tslib": "^2.3.0",
        "zone.js": "~0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.5",
        "@angular/cli": "^18.2.5",
        "@angular/compiler-cli": "^18.2.0",
        "@types/crypto-js": "^4.2.2",
        "@types/jasmine": "~5.1.0",
        "autoprefixer": "^10.4.20",
        "jasmine-core": "~5.2.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.5.2"
    }
}
